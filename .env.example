NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

DATABASE_URL=

UPLOADTHING_SECRET=
UPLOADTHING_APP_ID=

LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
NEXT_PUBLIC_LIVEKIT_URL=

NEXT_PUBLIC_SITE_URL=

# Tenor API for GIF picker
NEXT_PUBLIC_TENOR_API_KEY=

# SMTP Configuration for email notifications
# Use SMTP provider like Gmail, Outlook, or dedicated email service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=HAOS Notifications <your-email@gmail.com>

# Web Push Notification Configuration (VAPID)
# Generate keys using: node scripts/generate-vapid-keys.js
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_SUBJECT=mailto:admin@yourdomain.com
PUSH_NOTIFICATIONS_ENABLED=false

# ==============================================================================
# Matrix Homeserver Configuration
# ==============================================================================
# The Matrix homeserver URL your Melo instance connects to
NEXT_PUBLIC_MATRIX_HOMESERVER_URL=https://matrix.example.com

# ==============================================================================
# Private Mode Configuration (Security)
# ==============================================================================
# Enable private mode to restrict logins to users from your homeserver only
# Default: true (for security - prevents random users from logging in)
MELO_PRIVATE_MODE=true

# The homeserver URL that users must have accounts on to login
# When set, only users with accounts on this homeserver can login
# If not set, defaults to NEXT_PUBLIC_MATRIX_HOMESERVER_URL
MELO_ALLOWED_HOMESERVER=https://matrix.example.com

# Client-side version of private mode settings (for UI display)
NEXT_PUBLIC_MELO_PRIVATE_MODE=true
NEXT_PUBLIC_MELO_ALLOWED_HOMESERVER=https://matrix.example.com

# Future: Require admin invite for external users (not yet implemented)
MELO_INVITE_ONLY=false
